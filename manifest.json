{
	"manifest_version": 2,
	"name": "PokeExtension",
	"description": "Busque pokemons!",
	"version": "1.0",
	"icons": {
		"128" : "img/icon.png",
		"48" : "img/icon.png",
		"16" : "img/icon.png"
	},
	"permissions": [
		"storage",
		"tabs"
	],

	"browser_action": {
		"default_icon": "img/icon.png",
		"default_popup": "popup.html"
	},
	"content_security_policy": "script-src 'self' https://ssl.google-analytics.com; object-src 'self'",
	"web_accessible_resources": [
		"img/icon128.png"
	]
}
